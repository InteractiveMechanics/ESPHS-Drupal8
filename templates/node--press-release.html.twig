<div class="subpage-hero-section">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12">
                        
                        <div class="subpage-hero-details press-hero" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0) 49%,rgba(0,0,0,0.01) 50%,rgba(0,0,0,0.35) 100%), url({{file_url(node.field_lead_image.entity.uri.value)}});">
                            <section>
                                <h1 class="subpage-title">{{node.title.value}}</h1>
                            </section>
                        </div>

                    </div>

                </div>
            </div>
        </div>


        <div class="main-content-subpages press-release-page">

            <div class="container-fluid">

                <div class="padded-box">
                    
                    <div class="main-item">

                        <div class="row">
                            
                            <div class="col-md-8 col-sm-12 col-xs-12 body-area node-body-area">
                            
                            	<h2>{{node.field_long_title.value|raw}}</h2>
                            	
                                <p class="press-release-detail"><strong>{{ node.created.value|date("F j, Y") }}</strong></p>

                                {% if node.field_press_release_pdf.entity.uri.value %}
                                <div class="download-press-release hidden-xs">
                                    <button class="btn btn-large btn-white btn-pdf" data-pdf="{{file_url(node.field_press_release_pdf.entity.uri.value)}}">
                                        <span class="glyphicon glyphicon-download-alt"></span> Download PDF 
                                    </button>
                                </div>
                                {% endif %}
                                
                                {{node.body.value|raw}}

                                 <p class="text-center">###</p>
                            </div>
                            


                            <div class="col-md-4">

                                <ul class="list-unstyled">
                             
                                	{% for item in node.field_related_images %}
	                                    <li>
	                                        <div>
	                                            <div class="press-image">
	                                                <a href="javascript: void(0);" class='mymodal' data-code="{{item.entity.field_image_code.value}}" 
             data-image="{{file_url(item.entity.field_press_image.entity.uri.value)}}"
             data-title="{{item.entity.title.value}}"
             data-thumbnail="{{item.entity.field_press_image.entity.uri.value | image_style('large')}}"
             data-codes="{{item.entity.field_image_code.value}}"
             data-credit="{{item.entity.field_image_credit.value}}"
             date-desc="{{item.entity.field_image_description.value}}">
	                                                	<img class="img-responsive" src="{{file_url(item.entity.field_press_image.entity.uri.value)}}" style="height: auto; 
	                                                																									  width: 100%;">
	                                                </a>
	
	                                                <div class="overlay hidden-xs">
	                                                    <a href="javascript: void(0);" class='mymodal' data-code="{{item.entity.field_image_code.value}}" 
             data-image="{{file_url(item.entity.field_press_image.entity.uri.value)}}"
             data-title="{{item.entity.title.value}}"
             data-thumbnail="{{item.entity.field_press_image.entity.uri.value | image_style('large')}}"
             data-codes="{{item.entity.field_image_code.value}}"
             data-credit="{{item.entity.field_image_credit.value}}"
             date-desc="{{item.entity.field_image_description.value}}">
	                                                    	<span class="glyphicon glyphicon-download-alt"></span>
	                                                    </a>
	                                                </div>
	                                            </div>
	
	                                            <div class="caption">
	                                                <p>{{item.entity.title.value}} <strong>Image Code: {{item.entity.field_image_code.value}}</strong></p>
	                                            </div>
	
	                                            <hr>
	                                        </div>
	                                    </li>
                                    {% endfor %}
                                </ul>
                                
                            </div>
                        </div>

                    </div>
                    

                </div>

            </div>


        </div>
        
        {% include directory ~ '/inc/figure-image-js.html.twig' %}
        
        <script type="text/javascript">
        	
        	$(document).ready(function(){
	        	$('.btn-pdf').click(function(){
		        	var pdfLink = $(this).data('pdf');
		        	window.open(window.location.origin + pdfLink);
	        	})
        	});
        	
        </script>
        
        
        
    
    <!-- Modal -->
<div class="modal fade press-modal release-modal" data-source="" id="myImageModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" style="font-size:30px;">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <img class="img-responsive modal-thumbnail" src="">

                <div class="caption">
                    <p class=""><span class="modal-title">Lorem ipsum dolor sit amet, conset</span> <br />
                </div>
            </div>

            <div class="col-md-6" id="ModalForm">  
                <h3>Download this Image</h3>
                <p class="request-form-error-message text-center" style="margin:0px; margin-bottom:10px;">
					
				</p>
                
                {{formform}}
                
                <input class="btn btn-big btn-download btn-red button button--primary" style="text-align: center; margin: 0px auto; width: 70%; display: none;" data-drupal-selector="edit-download" type="submit" id="edit-download--107" name="op" value="Download Video">
                
                <a href="javascript:void(0);"></a>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

    


