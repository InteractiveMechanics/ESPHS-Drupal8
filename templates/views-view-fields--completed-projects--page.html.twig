<li>
    <div class="row">
        <div class="col-md-3">
            <div class="list-item-image">
            	{%if row._entity.field_thumbnail_image.entity.filename %}
            		<a href="{{ path('entity.node.canonical', {'node': row._entity.nid.value}) }}" style="max-height: 225px; overflow: hidden; display: block; border: none !important;">
                		<img class="img-responsive" src="{{file_url(row._entity.field_thumbnail_image.entity.uri.value)}}">
                	</a>
                {% endif %}
            </div>
        </div>

         <div class="col-md-9">
            <div class="list-item-detail">
            	<h6>Status: {{row._entity.field_annual_appeal_status.value}} &nbsp;&nbsp;|&nbsp;&nbsp; Cost: {{row._entity.field_annual_appeal_cost.value}}</h6>
                <h2><a href="{{ path('entity.node.canonical', {'node': row._entity.nid.value}) }}">{{row._entity.title.value}}</a></h2>
                
                
                {% set text = row._entity.body.value|render|striptags %}
				<p>{{ text|length > 500 ? text|slice(0, 500) ~ '...' : text }}</p>
            </div>
        </div>
    </div>
    <br />
    <hr>
</li>